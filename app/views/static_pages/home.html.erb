<div class="center jumbotron">
  <h1>Welcome to the Sample App</h1>

  <h2>
    This is the home page for the
    <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
  </h2>
  
  <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-lg btn-primary" %>
</div>

<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>

<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
    </aside>
  </div>
  
      <section>
        <%= render 'devise/shared/user_info/' %>
      </section>
      <section>
        <%= render 'devise/shared/stats' %>
      </section>
      <section>
        <%= render 'devise/shared/micropost_form' %>
      </section>
  
  <div class="col-md-8">
  <h3>Micropost Feed</h3>
  <%= render 'devise/shared/feed' %>
  </div>
  </div>
  
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Sample App</h1>

    <h2>
    This is the home page for the
      <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a>
    sample application.
    </h2>

    <%= link_to "Sign up now!", new_user_registration_path,
                                class: "btn btn-lg btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %>